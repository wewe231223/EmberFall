table FireProjectileSC {
	header: PacketHeaderSC;
	objectId: ushort;
	dir: Vec3;
	startPos: Vec3;
	startSpeed: float;
	projectileType: ProjectileTypes;
}

table ProjectileMoveSC {
	header: PacketHeaderSC;
	objectId:ushort;
	pos: Vec3;
	dir: Vec3;
	speed: float;
}

