table ObjectAppearedSC {  
	objectId: ushort;
	entity: EntityType;
	animation: AnimationState;
	hp: float;
	yaw: float;
	pos: Vec3;
}

table ObjectDisappearedSC {
	objectId: ushort;
}

table ObjectRemovedSC {
	objectId: ushort;
}

table ObjectMoveSC {
	objectId: ushort;
	yaw: float;
	pos: Vec3;
	dir: Vec3;
